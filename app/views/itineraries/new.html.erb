<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div id="map" style='width: 100%;'>
    <%= content_tag "div", id: "multi_overlays_with_picker", style: 'width: 100%; height: 400px;', data: {coords: @coords} do %>
    <% end %>
</div>


<div class="panel loginPanel">
  <h2>New Itinerary Item</h2>

  <%= form_for @itinerary do |f| %>
    <div class="row">
      <div class="large-3 columns">
        <%= f.text_field :lat, id: "latForm"%>
      </div>
      <div class="large-3 columns">
        <%= f.text_field :lng, id: "lngForm" %>
      </div>
      <div class="large-3 columns">
        <%= f.hidden_field :post_id, autofocus: true, value: @post.id %>
      </div>
    </div>
    <div class="row">
      <div class="large-3 columns">
        <label>what?
          <%= f.text_field :what, autofocus: true, placeholder: "what?" %>
        </label>
      </div>
      <div class="large-3 columns">
        <label>how Much?
          <%= f.text_field :how_much, autofocus: true, placeholder: "how Much?" %>
        </label>
      </div>
      <div class="large-3 columns">
        <label>what day?
          <%= f.date_field :date, autofocus: true, placeholder: "what day?" %>
        </label>
      </div>
      <div class="large-3 columns">
        <label>what time?
          <%= f.time_field :time, autofocus: true, placeholder: "what time?" %>
        </label>
      </div>
      <%= f.hidden_field :post_id, value: params[:post_id] %>
      <%= f.submit "Add" %>
    </div>
  <% end %>
</div>

<table class= "centered">
  <thead>
    <tr>
      <th width="60">Date</th>
      <th width="60">Time</th>
      <th width="150">What</th>
      <th width="150">How Much</th>
    </tr>
  </thead>
  <tbody>
    <% @itineraries.each do |itr| %>
      <tr>
      <td><%= itr.date %></td>
      <td><%= itr.time %></td>
      <td><%= itr.what %></td>
      <td><%= itr.how_much %></td>
      </tr>
    <% end %>
  </tbody>
</table>
