<div class="nichePic" style="background-image: url(<%= @niche.image.url %>) ;">
  <h3 class="guideLink">Niche Guide</h3>
</div>
<div class="panel">
  <% @posts.each do |post| %>
    <a href="/posts/<%= post.id %>">
      <div class="postPanel button" style="background-image: url(<%= post.image.url(:medium) %>) ;">
        <h5><%= post.title %></h5>
        <p><%= post.description[0..20] %></p>
      </div>
    </a>
  <% end %>
</div>
